FIND_PATH(INCLUDE_PATH_GMP gmp.h $ENV{HOME}/.local/include)
FIND_LIBRARY(LIB_PATH_GMP NAMES gmp PATH $ENV{HOME}/.local/include)

IF (INCLUDE_PATH_GMP AND LIB_PATH_GMP)
   SET(GMP_FOUND TRUE)
ENDIF (INCLUDE_PATH_GMP AND LIB_PATH_GMP)

IF (GMP_FOUND)
   IF (NOT GMP_FIND_QUIETLY)
      MESSAGE(STATUS "Found GMP: ${LIB_PATH_GMP}")
   ENDIF (NOT GMP_FIND_QUIETLY)
ELSE (GMP_FOUND)
   IF (GMP_FIND_REQUIRED)
      MESSAGE(FATAL_ERROR "Could not find GMP")
   ENDIF (GMP_FIND_REQUIRED)
ENDIF (GMP_FOUND)
